<form action="/login" method="post" class="form-signin">
  {{er}}
  {{#if error_msg }}
    <div class="alert alert-warning alert-dismissible fade show" role="alert">
      <strong>{{error_msg}}</strong>
      <button type="button" class="close" data-dismiss="alert" aria-label="Close">
        <span aria-hidden="true">&times;</span>
      </button>
    </div>
  {{/if}}
  {{#if er }}

    {{#each er}}
      <div class="alert alert-warning alert-dismissible fade show" role="alert">
        <strong>{{msg}}</strong>
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
        <span aria-hidden="true">&times;</span>
      </button>
      </div>
    {{/each}}
  {{/if}}
  <img class="mb-4" src="/images/imee-2.png" alt="" width="242" height="102">
  <h1 class="h4 mb-3 font-weight-normal">Εισάγετε τα στοιχεία σας</h1>
  <label for="inputEmail" class="sr-only">Username</label>
  <input type="text" id="username" name="username" class="form-control" placeholder="Username" required autofocus>
  <label for="inputPassword" class="sr-only">Password</label>
  <input type="password" id="password" name="password" class="form-control" placeholder="Password" required>
  <!-- <div class="checkbox mb-3">
    <label>
          <input type="checkbox" value="remember-me"> Remember me
        </label>
  </div> -->
  <button class="btn btn-lg btn-primary btn-block mt-5" type="submit">Είσοδος</button>
  <p class="mt-5 mb-3 text-muted">&copy; 2018</p>
</form>
