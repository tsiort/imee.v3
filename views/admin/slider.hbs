<div class="my-3 p-3 bg-white rounded shadow-sm">

  <!-- Category Edit -->

  <h6 class="border-bottom border-gray pb-2 mb-0" style="font-weight:600;">Ρύθμιση Slider</h6>


  <form action="/admin/settings/slider" method="post" class="mt-3">

    <!-- Slider 1 -->
    <div class="media text-muted pt-3">
      <p class="media-body pb-1 mb-0 small lh-125 border-bottom border-gray">
        <strong class="d-block text-gray-dark">Slider 1</strong>
      </p>
    </div>

    <div class="form-group my-2 pl-3">
      <div class="row h-100">
        <div class="col-12 col-md-8">
          <label for="sliderimg1" class="m-0"><small class="text-primary" style="font-weight:600;">Εικόνα</small></label>
          <select class="custom-select custom-select-sm" size="5" id="sliderimg1" name="sliderimg1" style="height:250px;">
            {{#if images}}
              {{#each images}}
                <option value="{{name}}" {{#if ../slider}} {{#ifCond ../slider.slider1img '==' name }} selected {{/ifCond}}{{/if}}>{{name}}</option>
              {{/each}}
            {{else}}
              <option value="Δεν βρέθηκαν εικόνες">Δεν βρέθηκαν εικόνες</option>
            {{/if}}
          </select>
        </div>
        <div class="col-12  col-md-4 text-center">
          <label for="programGalleryPrev-1" class="m-0"><small class="text-secondary" style="font-weight:600;">Προεπισκόπηση</small></label>
          <div class="border rounded" id="programGalleryPrev-1" style="height:250px;">
            <!-- Dynamic Append  -->
            {{#if slider.slider1img}}
              <img src="/files/uploads/images/{{slider.slider1img}}" alt="{{slider.slider1img}}" class="w-100 h-100 ">
            {{/if}}
          </div>
          <button type="button" id="btn-prog-img-clear-1" class="btn btn-primary btn-sm w-100 mt-1">Καθαρισμός Εικόνας</button>
        </div>
      </div>
    </div>


    <div class="form-group my-2 pl-3">
      <div class="row h-100">
        <div class="col-12">
          <label for="slidertitle1" class="m-0"><small class="text-primary" style="font-weight:600;">Τίτλος</small></label>
          <input class="form-control form-control-sm" id="slidertitle1" name="slidertitle1" {{#if slider.slider1title}} value="{{slider.slider1title}}" {{/if}}>
        </div>
      </div>
    </div>

    <div class="form-group my-2 pl-3">
      <div class="row h-100">
        <div class="col-12">
          <label for="slidertext1" class="m-0"><small class="text-primary" style="font-weight:600;">Κείμενο</small></label>
          <textarea class="form-control form-control-sm" id="slide-text1" name="slidertext1">{{#if slider.slider1text}}{{slider.slider1text}}{{/if}}</textarea>
        </div>
      </div>
    </div>


    <div class="form-group my-4 pl-3">
      <div class="row h-100">
        <div class="col-12">
          <label for="sliderprog1" class="m-0"><small class="text-primary" style="font-weight:600;">Σύνδεση με πρόγραμμα</small></label>
          <select class="form-control form-control-sm" id="sliderprog1" name="sliderprog1">
            {{#if programs}}
              <option value="" selected>Χωρίς σύνδεση</option>
              {{#each programs}}
                <option value="{{id}}" {{#if ../slider}} {{#ifCond ../slider.slider1prog '==' id}} selected {{/ifCond}}{{/if}}>{{title}}</option>
              {{/each}}
            {{else}}
              <option value="Δεν βρέθηκαν προγράμματα">Δεν βρέθηκαν προγράμματα</option>
            {{/if}}
          </select>
        </div>
      </div>
    </div>


