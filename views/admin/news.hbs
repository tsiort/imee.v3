<div class="my-3 p-3 bg-white rounded shadow-sm">
  <div class="border-bottom border-gray pb-2 mb-0 row mx-0 ">
    <div class="col-9 my-auto">
      <h6 class="m-0">Νέα</h6>
    </div>
    <div class="col-3 ">
      <div class="input-group input-group-sm ">
        <input type="text" class="form-control" id="seachInput" onkeyup="liveSearch()" placeholder="Αναζήτηση..." aria-label="Sizing example input" aria-describedby="inputGroup-sizing-sm">
      </div>
    </div>

  </div>

  {{#if news}}

    {{#each news}}
      <div class="media text-muted pt-3 imee-seach-item" imee-search-keys="{{title}}">
        <i class="fas fa-2x fa-newspaper"></i>
        <p class="media-body ml-3 pb-3 mb-0 small lh-125 border-bottom border-gray">
          <strong class="d-block text-gray-dark">@{{id}}</strong>
          <a href="/admin/news/{{id}}/delete"><span class="float-right mx-3"><i title="Διαγραφή" class="fas fa-trash-alt"></i></span></a>
          <a href="/admin/news/{{id}}/edit"><span class="float-right mx-3"><i title="Επεξεργασία" class="fas fa-edit"></i></span></a>
            {{title}}
        </p>

      </div>
    {{/each}}

  {{else}}
    <div class="media text-muted pt-3">
      <p class="media-body pb-3 mb-0 small lh-125 border-bottom border-gray">
        <strong class="d-block text-gray-dark">Δεν βρέθηκαν Ανακοινώσεις</strong>
      </p>
    </div>

  {{/if}}




  <small class="d-block text-right mt-3">
  <a href="/admin/news/new">Δημιουργία Ανακοίνωσης</a>
</small>


</div>
