<div class="my-3 p-3 bg-white rounded shadow-sm">
  <h6 class="border-bottom border-gray pb-2 mb-0">Ανέβασμα Αρχείου</h6>

  <form ref='uploadForm' action='/admin/file/upload' method='post' encType="multipart/form-data">
    <div class="my-3 p-3 bg-light border-bottom ">
      <div class="form-group">
        <label for="formControlSelect1"><small>Είδος Αρχείου</small></label>
        <select class="form-control form-control-sm" id="formControlSelect1" name="fileType" required>
        <option value="doc">Έγγραφο</option>
        <option value="img">Εικόνα</option>
      </select>
      </div>

      <div class="form-group pt-2">
        <input type="file" class="form-control-file form-control-sm p-0" name="file" id="formControlFile">
      </div>
    </div>
    <div class="d-flex justify-content-between">
      <button type="submit" class="btn btn-primary btn-sm">Μεταφόρτωση</button>
      <a href="/admin/file" class="my-auto"><small>Πίσω</small></a>
    </div>
  </form>
</div>
