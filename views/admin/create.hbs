<div class="my-3 p-3 bg-white rounded shadow-sm">

  {{#ifCond type '==' 'slider'}}

    <h6 class="border-bottom border-gray pb-2 mb-0" style="font-weight:600;">Νέο Slider</h6>

    <form action="/admin/settings/slider/new" method="post" class="mt-3">


      <div class="form-group my-2">
        <div class="row h-100">
          <div class="col-12 col-md-8">
            <label for="image" class="m-0"><small class="text-primary" style="font-weight:600;">Εικόνα</small></label>


            {{#if data.images}}
              <select class="custom-select custom-select-sm" size="5" id="sliderImage" name="image" style="height:250px;" required>
                {{#each data.images}}
                  <option value="{{name}}">{{name}}</option>
                {{/each}}
              </select>
            {{else}}
              <select class="custom-select custom-select-sm" size="5" id="sliderImage" name="image" style="height:250px;" disabled>
                <option value="Δεν βρέθηκαν εικόνες">Δεν βρέθηκαν εικόνες</option>
              </select>
            {{/if}}
          </div>
          <div class="col-12  col-md-4 text-center">
            <label for="imagePreview" class="m-0"><small class="text-secondary" style="font-weight:600;">Προεπισκόπηση</small></label>
            <div class="border rounded" id="sliderImagePreview" style="height:250px;">

            </div>
            <button type="button" id="sliderImagePreviewClear" class="btn btn-primary btn-sm w-100 mt-1">Καθαρισμός Εικόνας</button>
          </div>
        </div>
      </div>


      <div class="form-group my-2">
        <div class="row h-100">
          <div class="col-12">
            <label for="title" class="m-0"><small class="text-primary" style="font-weight:600;">Τίτλος</small></label>
            <input class="form-control form-control-sm" id="title" name="title" placeholder="Τίτλος" required>
          </div>
        </div>
      </div>

      <div class="form-group my-2">
        <div class="row h-100">
          <div class="col-12">
            <label for="text" class="m-0"><small class="text-primary" style="font-weight:600;">Κείμενο</small></label>
            <textarea class="form-control form-control-sm" id="text" name="text" placeholder="Κείμενο"></textarea>
          </div>
        </div>
      </div>


      <div class="form-group my-4">
        <div class="row h-100">
          <div class="col-12">
            <label for="sliderConnection" class="m-0"><small class="text-primary" style="font-weight:600;">Σύνδεσμος</small></label>
            <select class="form-control form-control-sm" id="sliderConnection" name="sliderConnection">
              <option value="" selected>Χωρίς σύνδεση</option>
              {{#if data.programs}}
                <optgroup label="Προγράμματα">
                  {{#each data.programs}}
                    <option value="1-{{id}}">{{title}}</option>
                  {{/each}}
                </optgroup>
              {{/if}}
              {{#if data.categories}}
                <optgroup label="Κατηγορίες">
                  {{#each data.categories}}
                    <option value="2-{{id}}">{{text}}</option>
                  {{/each}}
                </optgroup>
              {{/if}}
              {{#if data.programTypes}}
                <optgroup label="Βασικές Κατηγορίες Προγραμμάτων">
                  {{#each data.programTypes}}
                    <option value="3-{{id}}">{{text}}</option>
                  {{/each}}
                </optgroup>
              {{/if}}
            </select>
          </div>
        </div>
      </div>



      <div class="d-flex justify-content-between">
        <button type="submit" class="btn btn-primary btn-sm">Δημιουργία</button>
        <a href="/admin/settings/slider" class="my-auto"><small>Πίσω</small></a>
      </div>

    </form>

  {{/ifCond}}



  {{#ifCond type '==' 'cat'}}
    <h6 class="border-bottom border-gray pb-2 mb-0" style="font-weight:600;">Νέα Κατηγορία</h6>

    <form action="/admin/category/new" method="post" class="mt-3">

      {{#if data.programTypes}}

        <div class="form-group">
          <label for="programTypeId" class="m-0"><small class="text-primary" style="font-weight:600;">Είδος Κατηγορίας</small></label>
          <select class="custom-select custom-select-sm" id="programTypeId" name="programTypeId" required>
            {{#each data.programTypes}}
              <option value="{{id}}">{{text}}</option>
            {{/each}}
          </select>
        </div>

        <div class="form-group">
          <label for="text" class="m-0"><small class="text-primary" style="font-weight:600;">Όνομα Κατηγορίας</small></label>
          <input type="text" class="form-control form-control-sm" id="text" name="text" aria-describedby="textHelp" placeholder="Όνομα Κατηγορίας" required>
        </div>

      {{/if }}

      <div class="d-flex justify-content-between">
        <button type="submit" class="btn btn-primary btn-sm">Δημιουργία</button>
        <a href="/admin/category" class="my-auto"><small>Πίσω</small></a>
      </div>

    </form>

  {{/ifCond}}

  {{#ifCond type '==' 'prog'}}
