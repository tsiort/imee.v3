        <label for="subTitle4" class="m-0"><small class="text-primary" style="font-weight:600;">Κεφαλίδα Ενότητας</small></label>
        <input type="text" class="form-control form-control-sm" id="subTitle4" name="subTitle4" aria-describedby="textHelp" placeholder="Κεφαλίδα">
        <label for="subText4" class="m-0"><small class="text-primary" style="font-weight:600;">Κείμενο</small></label>
        <textarea class="wysiwyg" name="subText4" id="subText4"></textarea>
      </div>

      <div class="form-group my-5 pl-3 imee-admin-multiple-sections">
        <label for="subTitle5" class="m-0"><small class="text-primary" style="font-weight:600;">Κεφαλίδα Ενότητας</small></label>
        <input type="text" class="form-control form-control-sm" id="subTitle5" name="subTitle5" aria-describedby="textHelp" placeholder="Κεφαλίδα">
        <label for="subText5" class="m-0"><small class="text-primary" style="font-weight:600;">Κείμενο</small></label>
        <textarea class="wysiwyg" name="subText5" id="subText5"></textarea>
      </div>

      <div class="form-group my-5 pl-3 imee-admin-multiple-sections">
        <label for="subTitle6" class="m-0"><small class="text-primary" style="font-weight:600;">Κεφαλίδα Ενότητας</small></label>
        <input type="text" class="form-control form-control-sm" id="subTitle6" name="subTitle6" aria-describedby="textHelp" placeholder="Κεφαλίδα">
        <label for="subText6" class="m-0"><small class="text-primary" style="font-weight:600;">Κείμενο</small></label>
        <textarea class="wysiwyg" name="subText6" id="subText6"></textarea>
      </div>
      <!-- Addition of multiple sections  -->

      <div class="form-group my-5 pl-3">
        <label for="programCategories" class="m-0"><small class="text-primary" style="font-weight:600;">Κατηγορίες</small></label>
        <small class="float-right text-secondary">Για πολλαπλή επιλογή πατήστε <kbd>ctrl</kbd></small>
        <!-- <input type="text" class="form-control form-control-sm" id="programCategories" name="programCategories" aria-describedby="textHelp" placeholder="Όνομα Προγράμματος"> -->
        <select class="custom-select custom-select-sm" size="5" id="programCategories" name="programCategories" multiple required>
          <!-- <option selected>Open this select menu</option> -->
          {{#if data.categories}}
            {{#each data.categories}}
              <option value="{{id}}">{{text}}</option>
            {{/each}}
          {{else}}
            <option value="Δεν βρέθηκαν κατηγορίες">Δεν βρέθηκαν κατηγορίες</option>
          {{/if}}
        </select>
      </div>

      <div class="form-group my-5 pl-3">
        <div class="row h-100">
          <div class="col-12 col-md-8">
            <label for="programGallery" class="m-0"><small class="text-primary" style="font-weight:600;">Κύρια Εικόνα</small></label>
            <div class="border rounded" style="height:250px;overflow-y:scroll;">
              {{#if data.images}}
                {{#each data.images}}
                  <div class="m-3 border d-inline-block text-center" style="height:80px; width:80px;">
                    <img src="/files/uploads/images/{{name}}" alt="{{name}}" imee-img-name="{{name}}" class="imee-prog-img w-100 h-100 ">
                  </div>
                {{/each}}
              {{/if}}
            </div>
            <input type="text" class="form-control form-control-sm mt-1" id="programImage" name="image" aria-describedby="textHelp" placeholder="Εικόνα Προγράμματος" readonly required>
          </div>
          <div class="col-12  col-md-4 text-center">
            <label for="programGalleryPrev" class="m-0"><small class="text-secondary" style="font-weight:600;">Προεπισκόπηση</small></label>
            <div class="border rounded " id="programGalleryPrev" style="height:250px;">
              <!-- Dynamic Append  -->
            </div>
            <button type="button" id="btn-prog-img-clear" class="btn btn-primary btn-sm w-100 mt-1">Καθαρισμός Εικόνας</button>
          </div>
        </div>
      </div>


      <div class="form-group my-5 pl-3">
        <label for="programAttachments" class="m-0"><small class="text-primary" style="font-weight:600;">Συνημμένα</small></label>
        <small class="float-right text-secondary">Για πολλαπλή επιλογή πατήστε <kbd>ctrl</kbd></small>
        <select class="custom-select custom-select-sm" size="5" id="programAttachments" name="attachments" {{#if  data.documents}} multiple {{else}} disabled {{/if}}>
          {{#if data.documents}}
            {{#each data.documents}}
              <option value="{{name}}">{{name}}</option>
            {{/each}}
          {{else}}
            <option value="Δεν βρέθηκαν αρχεία">Δεν βρέθηκαν αρχεία</option>
          {{/if}}
        </select>
        <input type="text" class="form-control form-control-sm mt-2" id="programAttachmentsPreview" name="programAttachmentsPreview" aria-describedby="textHelp" placeholder="Συνημμένα Αρχεία" readonly>
      </div>

      <!--Course data  -->
      <div class="media text-muted pt-1">
        <p class="media-body pb-1 mb-0 small lh-125 border-bottom border-gray">
          <strong class="d-block text-gray-dark">Πληροφορίες Μαθήματος</strong>
        </p>
      </div>

