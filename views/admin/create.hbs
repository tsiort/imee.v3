        </div>
      </div>

      <!-- Single section -->
      <div class="form-group my-5 pl-3 imee-admin-single-section">
        <label for="singleText" class="m-0"><small class="text-primary" style="font-weight:600;">Κείμενο</small></label>
        <textarea class="wysiwyg" name="singleText" id="singleText"></textarea>
      </div>


      <!-- Multiple sections -->
