<div class="my-3 p-3 bg-white rounded shadow-sm">

  {{#ifCond type '==' 'slider'}}

    <h6 class="border-bottom border-gray pb-2 mb-0" style="font-weight:600;">Νέο Slider</h6>

    <form action="/admin/settings/slider/{{data.slider.id}}/edit" method="post" class="mt-3">


      <div class="form-group my-2">
        <div class="row h-100">
          <div class="col-12 col-md-8">
            <label for="image" class="m-0"><small class="text-primary" style="font-weight:600;">Εικόνα</small></label>


            {{#if data.images}}
              <select class="custom-select custom-select-sm" size="5" id="sliderImage" name="image" style="height:250px;" required>
                {{#each data.images}}
                  <option value="{{name}}" {{#if ../data.slider.image}} {{#ifCond ../data.slider.image '==' name}} selected {{/ifCond}} {{/if}}>{{name}}</option>
                {{/each}}
              </select>
            {{else}}
              <select class="custom-select custom-select-sm" size="5" id="sliderImage" name="image" style="height:250px;" disabled>
                <option value="Δεν βρέθηκαν εικόνες">Δεν βρέθηκαν εικόνες</option>
              </select>
            {{/if}}
          </div>
          <div class="col-12  col-md-4 text-center">
            <label for="imagePreview" class="m-0"><small class="text-secondary" style="font-weight:600;">Προεπισκόπηση</small></label>
            <div class="border rounded" id="sliderImagePreview" style="height:250px;">
              {{#if data.slider.image}}
                <img src="/files/uploads/images/{{data.slider.image}}" alt="{{data.slider.image}}" class="w-100 h-100 ">;
              {{/if}}
            </div>
            <button type="button" id="sliderImagePreviewClear" class="btn btn-primary btn-sm w-100 mt-1">Καθαρισμός Εικόνας</button>
          </div>
        </div>
      </div>


      <div class="form-group my-2">
        <div class="row h-100">
          <div class="col-12">
            <label for="title" class="m-0"><small class="text-primary" style="font-weight:600;">Τίτλος</small></label>
            <input class="form-control form-control-sm" id="title" name="title" placeholder="Τίτλος" {{#if data.slider.title}} value="{{data.slider.title}}" {{/if}} required>
          </div>
        </div>
      </div>

      <div class="form-group my-2">
        <div class="row h-100">
          <div class="col-12">
            <label for="text" class="m-0"><small class="text-primary" style="font-weight:600;">Κείμενο</small></label>
            <textarea class="form-control form-control-sm" id="text" name="text" placeholder="Κείμενο">{{#if data.slider.text}}{{data.slider.text}}{{/if}} </textarea>
          </div>
        </div>
      </div>


      <div class="form-group my-4">
        <div class="row h-100">
          <div class="col-12">
            <label for="sliderConnection" class="m-0"><small class="text-primary" style="font-weight:600;">Σύνδεσμος</small></label>
            <select class="form-control form-control-sm" id="sliderConnection" name="sliderConnection">
              <option value="">Χωρίς σύνδεση</option>
              {{#if data.programs}}
                <optgroup label="Προγράμματα">
                  {{#each data.programs}}
                    <option value="1-{{id}}" {{#if ../data.slider.programId}} {{#ifCond ../data.slider.programId '==' id}} selected {{/ifCond}} {{/if}}>{{title}}</option>
                  {{/each}}
                </optgroup>
              {{/if}}
              {{#if data.seminars}}
                <optgroup label="Προγράμματα">
                  {{#each data.seminars}}
                    <option value="2-{{id}}" {{#if ../data.slider.seminarId}} {{#ifCond ../data.slider.seminarId '==' id}} selected {{/ifCond}} {{/if}}>{{title}}</option>
                  {{/each}}
                </optgroup>
              {{/if}}
              {{#if data.categories}}
                <optgroup label="Κατηγορίες">
                  {{#each data.categories}}
                    <option value="3-{{id}}" {{#if ../data.slider.categoryId}} {{#ifCond ../data.slider.categoryId '==' id}} selected {{/ifCond}} {{/if}}>{{text}}</option>
                  {{/each}}
                </optgroup>
              {{/if}}
            </select>
          </div>
        </div>
      </div>



      <div class="d-flex justify-content-between">
        <button type="submit" class="btn btn-primary btn-sm">Αποθήκευση</button>
        <a href="/admin/settings/slider" class="my-auto"><small>Πίσω</small></a>
      </div>

    </form>

  {{/ifCond}}



