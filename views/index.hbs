{{#if data.sliders}}
  <div id="demo" class="carousel slide" data-ride="carousel">


    <!-- Indicators -->
    <ul class="carousel-indicators">
      {{#each data.sliders}}
        <li data-target="#demo" data-slide-to="{{@index}}" class="active"></li>
      {{/each}}
    </ul>

    <!-- Slideshow -->

    <div class="carousel-inner">
      {{#each data.sliders}}
        <div class="carousel-item {{#ifCond @index '==' '0'}}active{{/ifCond}}" style="height: 450px;">
          <!-- <div class="w-100 h-100 position-absolute"></div> -->
          <img class="img-fluid w-100" src="/files/uploads/images/{{image}}" alt="{{title}}" style="max-width:100%;height:auto;min-height:500px;object-fit:cover;">
          <div class="carousel-caption text-left">
            <h3>{{title}}</h3>
            <p class="pl-2">{{text}}</p>
            <div class="align-text-bottom w-100 text-right">
              <a href="/programs/" class="btn imee-btn ">Περισσότερα</a>
            </div>

          </div>

        </div>
      {{/each}}
    </div>

    <!-- Left and right controls -->
    <a class="carousel-control-prev" href="#demo" data-slide="prev">
      <span class="carousel-control-prev-icon"></span>
    </a>
    <a class="carousel-control-next" href="#demo" data-slide="next">
      <span class="carousel-control-next-icon"></span>
    </a>
  </div>
{{/if}}

